{
  "name": "@kamote-tsp/ky-client",
  "version": "0.0.1",
  "description": "A Ky-based HTTP client generator that consumes TypeScript types from @kamote-tsp/emitter",
  "type": "module",
  "main": "dist/src/main.js",
  "exports": {
    ".": {
      "types": "./dist/src/main.d.ts",
      "default": "./dist/src/main.js"
    }
  },
  "files": [
    "dist/src/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "typespec",
    "typescript",
    "ky",
    "http-client",
    "codegen",
    "rest-api",
    "fetch"
  ],
  "author": "Michael Chris Lopez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/kamote-tsp.git",
    "directory": "packages/ky-client"
  },
  "bugs": {
    "url": "https://github.com/your-username/kamote-tsp/issues"
  },
  "homepage": "https://github.com/your-username/kamote-tsp/tree/main/packages/ky-client#readme",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ test/ --report-unused-disable-directives --max-warnings=0",
    "prepublishOnly": "npm run build && npm run test && npm run lint"
  },
  "dependencies": {
    "@kamote-tsp/emitter": "file:../emitter",
    "ky": "^1.8.2"
  },
  "devDependencies": {
    "@types/node": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
