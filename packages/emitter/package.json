{
  "name": "@kamote-tsp/emitter",
  "version": "0.0.1",
  "description": "A TypeSpec emitter that generates TypeScript operation files with flat structure using Alloy-JS",
  "type": "module",
  "main": "dist/src/main.js",
  "exports": {
    ".": {
      "types": "./dist/src/main.d.ts",
      "default": "./dist/src/main.js"
    }
  },
  "typespec": {
    "compilerVersion": "1.1.0",
    "emitters": {
      ".": {
        "name": "@kamote-tsp/emitter"
      }
    }
  },
  "files": [
    "dist/src/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "typespec",
    "typescript",
    "emitter",
    "codegen",
    "alloy-js",
    "openapi",
    "operation-emitter",
    "http",
    "rest-api"
  ],
  "author": "Michael Chris Lopez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/kamote-tsp.git",
    "directory": "packages/emitter"
  },
  "bugs": {
    "url": "https://github.com/your-username/kamote-tsp/issues"
  },
  "homepage": "https://github.com/your-username/kamote-tsp/tree/main/packages/emitter#readme",
  "peerDependencies": {
    "@alloy-js/core": "^0.18.0",
    "@alloy-js/typescript": "^0.18.0",
    "@typespec/compiler": "^1.1.0",
    "@typespec/emitter-framework": "^0.9.0"
  },
  "devDependencies": {
    "@alloy-js/rollup-plugin": "^0.1.0",
    "@typespec/compiler": "^1.2.1",
    "@typespec/http": "^1.2.1",
    "@typespec/openapi": "^1.2.1"
  },
  "scripts": {
    "build": "alloy build",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ test/ --report-unused-disable-directives --max-warnings=0",
    "prepublishOnly": "npm run build && npm run test && npm run lint"
  },
  "dependencies": {
    "@alloy-js/core": "^0.18.2",
    "@alloy-js/typescript": "^0.18.0",
    "@typespec/emitter-framework": "^0.9.0"
  }
}
